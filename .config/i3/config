assign [class="Element"] $ws8

# Autostart apps
exec --no-startup-id "sh -c 'sleep 8; skypeforlinux'"
exec --no-startup-id "sh -c 'sleep 4; minetime --no-sandbox'"
exec --no-startup-id "sh -c 'sleep 2; exec brave-browser'"
exec --no-startup-id "sh -c 'sleep 2; brave'"
#--no-startup-id "sh -c 'sleep 8; teams'"
